<div class="navbar bg-primary mb-5">
	<div class="container col-6 text-white">
		<h1>Express CRUD</h1>
	</div>
</div>
<div class="container">
<form method="Post" action="/update/<%= user._id%>?_method=PUT">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" name="email" placeholder="Email" value="<%=user.email%>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password" value="<%= user.password %>">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
</div>